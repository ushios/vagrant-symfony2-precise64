<VirtualHost *:80>
	ServerName localhost
	ServerAdmin webmaster@localhost

	DocumentRoot /mnt/symfony2/web
	<Directory /mnt/symfony2/web/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
		<IfModule mod_rewrite.c>
			RewriteEngine On
			RewriteCond %{REQUEST_FILENAME} !-f
			RewriteRule ^(.*)$ /app.php [QSA,L]
		</IfModule>
	</Directory>

	CustomLog /var/log/apache2/symfony2.access.log combined
	ErrorLog /var/log/apache2/symfony2.error.log
</VirtualHost>
